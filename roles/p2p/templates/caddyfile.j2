"{{ domain }}" {
				gzip
				root /var/www/html
				tls {{ user_mail }}
}

"metrics.{{ domain }}" {
				gzip
				basicauth	/					{{ metrics_basicauth_user }} 	{{ metrics_basicauth_password }}
				proxy		/					netdata:19999	{
				transparent
				}
				tls {{ user_mail }}
}

"plex.{{ domain }}" {
				proxy 		/					plex:32400		{
				transparent
				}
				timeouts 2m
				tls {{ user_mail }}
}

"files.{{ domain }}"	{
				basicauth	/					{{ files_basicauth_user }}		{{ files_basicauth_password }}
				root		/var/www/files
				browse
				timeouts none
				tls 		{{ user_mail }}
}

